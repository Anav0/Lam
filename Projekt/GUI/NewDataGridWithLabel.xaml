<UserControl x:Class="Projekt.GUI.NewDataGridWithLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projekt.GUI"
             xmlns:design="clr-namespace:Projekt.GUI.Design"

             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <Grid d:DataContext="{x:Static design:NewDataGridWithLabelDesign.Instance}" Background="White">
        <StackPanel Orientation="Vertical">
            <Label HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="{StaticResource Teal300ColorBrush}" FontWeight="DemiBold" Style="{StaticResource DefaultLabelStyle}" Content="{Binding LabelContent}"/>
            <DataGrid ItemsSource="{Binding Data}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
