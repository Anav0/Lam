<UserControl x:Class="Projekt.GUI.DataGridWithLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projekt.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500">
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Vertical" Grid.RowSpan="2">
            <Label Foreground="{StaticResource Teal300ColorBrush}" HorizontalAlignment="Left" Margin="5" Style="{StaticResource DefaultLabelStyle}" Content="{Binding Label}" />
            <DataGrid x:Name="MyDataGrid" ItemsSource="{Binding Data}" DataContext="{Binding}"/>
        </StackPanel>
        <local:ButtonWithImage MaxiCommandParameter="{Binding ClickCommandParameter}"  MaxiCommand="{Binding ClickCommand}" Foreground="{StaticResource Teal300ColorBrush}" HorizontalAlignment="Right" Grid.Row="1" ButtonContent="Do nowego okna" MyImageSource="/Resources/maxi.png"/>
    </Grid>
</UserControl>
