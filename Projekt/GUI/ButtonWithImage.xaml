<UserControl x:Class="Projekt.GUI.ButtonWithImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projekt.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="250" >
    <StackPanel Orientation="Horizontal" x:Name="LayoutRoot">
        <Button CommandParameter="{Binding MaxiCommandParameter}" Command="{Binding MaxiCommand}" Foreground="{StaticResource Teal400ColorBrush}" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource StandardOpacityButtonStyle}" Content="{Binding ButtonContent}"/>
        <Image Source="{Binding MyImageSource}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5"/>
    </StackPanel>

</UserControl>
