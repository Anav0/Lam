<Window x:Class="Projekt.Windows.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt.Windows"
        xmlns:design="clr-namespace:Projekt.Windows.Design"

        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="350" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource Teal500ColorBrush}"
        d:DataContext="{x:Static design:InputDialogDesign.Instance}" x:Name="Dialog">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.RowSpan="2">
            <Label FontSize="18" Margin="5" Content="{Binding Question}" Style="{StaticResource DefaultLabelStyle}" Foreground="White" />
            <TextBox FontSize="18" Style="{StaticResource BasicTextBox}" Text="{Binding Name}" Margin="5" Padding="2"/>
        </StackPanel>
        <Button FontSize="18" Command="{Binding OkClickCommand}" CommandParameter="{Binding ElementName=Dialog}" Grid.Row="1" Style="{StaticResource StandardOpacityButtonStyle}" Content="OK" Grid.RowSpan="2" Foreground="White"/>
    </Grid>
</Window>
